<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">    <!-- bean definitions here -->
    <bean  id="actor" class="com.stackroute.domain.Actor" >

        <property name="name" value="sally"> </property>
        <property name="gender" value="female"> </property>
        <property name="age" value="30"> </property>
     </bean>


    <bean class="com.stackroute.domain.Movie" id="movie">
        <property name="actor" ref="actor"/>

    </bean>
    <bean class="com.stackroute.demo.BeanLifecycleDemoBean" id="BEAN" init-method="customInit" destroy-method="customDestroy">
        <property name="name"  value="hello this is bean"/>
    </bean>

</beans>